<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/ProfileCardTimeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="April 12 2018 at 10:44AM"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ProfileCardBikeTypeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giant Escape 3"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="16dp">

            <TextView
                android:id="@+id/ProfileCardDurationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="40 min"
                android:textAlignment="textEnd"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profileCardDistanceText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5 kilometers"
                android:textAlignment="textEnd"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>